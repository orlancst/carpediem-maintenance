		<script>

			const btnOpenModal = document.querySelector("#btnModal");
			const btnCloseModal = document.querySelector("#btnCloseModal");

			btnOpenModal.addEventListener("click", () => {
				let dialog = document.querySelector("#modal-dialog");

				btnCloseModal.classList.toggle("hidden");

				dialog.classList.toggle("hidden");
				dialog.classList.toggle("flex");
	
				setTimeout(() => {
					dialog.classList.toggle("opacity-100");
				}, 20);

			});

			btnCloseModal.addEventListener("click", () => {
				let dialog = document.querySelector("#modal-dialog");

				btnCloseModal.classList.toggle("hidden");

				dialog.classList.toggle("hidden");
				dialog.classList.toggle("flex");

				setTimeout(() => {
					dialog.classList.toggle("opacity-100");
				}, 20);
			})

			function disableImgDragging() {
				var images = document.getElementsByTagName("img");
				for(var i = 0 ; i < images.length ; i++) {
					images[i].classList.add('no-drag');
					images[i].setAttribute('no-drag', 'on');
					images[i].setAttribute('draggable', 'false');
					images[i].addEventListener('dragstart', function( event ) {
						event.preventDefault();
					}, false);	
				}
			}
			disableImgDragging();
		</script>
